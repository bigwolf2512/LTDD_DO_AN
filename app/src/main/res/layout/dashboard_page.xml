<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/tv"
        android:layout_width="309dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:paddingTop="15dp"
        android:text="Chào mừng đến với tiệm sách cũ"
        android:textColor="#FF000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/list_sp"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_re"
        android:drawableTop="@drawable/ic_baseline_business_center_24"
        android:text="Danh sách sản phẩm"
        android:onClick="list_products"
        android:textColor="#FF000000"
        app:iconGravity="textTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/giohang"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_re"
        android:drawableTop="@drawable/ic_baseline_shopping_cart_24"
        android:text="Giỏ hàng"
        android:onClick="buy_products"
        android:textColor="#FF000000"
        app:iconGravity="textTop"
        app:iconSize="50dp"
        app:iconTint="#FF000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/thanhtoan"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/ic_re"
        android:drawableTop="@drawable/ic_baseline_payment_24"
        android:text="Thanh toán"
        android:textColor="#FF000000"
        app:iconGravity="textTop"
        app:iconSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ls_donhang"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/ic_re"
        android:drawableTop="@drawable/ic_baseline_feed_24"
        android:text="lịch sử đơn hàng"
        android:textColor="#FF000000"
        app:iconGravity="textTop"
        app:iconSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_re3"
        android:drawableTop="@drawable/ic_baseline_person_outline_24"
        android:onClick="user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_re3"
        android:drawableTop="@drawable/ic_baseline_storefront_24"
        android:onClick="quanly"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_re3"
        android:drawableTop="@drawable/ic_baseline_toc_24"
        android:onClick="setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="118dp"
        android:layout_height="101dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nhom2" />

</androidx.constraintlayout.widget.ConstraintLayout>