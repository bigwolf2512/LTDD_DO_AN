<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_Product">

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="701dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageBook"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="406dp"
            android:layout_height="155dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="407dp"
            android:layout_height="116dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/subtract"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:drawableTop="@drawable/ic_baseline_remove_circle_outline_24"
                android:text="" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="50dp"
                android:layout_height="49dp"
                android:layout_weight="0"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:drawableTop="@drawable/ic_baseline_add_circle_outline_24"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="414dp"
            android:layout_height="101dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="158dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="TextView" />

            <Button
                android:id="@+id/bnt_add"
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_re_gh"
                android:text="Thêm vào giỏ hàng" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>